<Window
    x:Class="PoliceDB.WPF.Views.EvidenceDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Детали улики"
    Width="900"
    Height="700"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Стиль для заголовков полей  -->
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,10,0" />
        </Style>

        <!--  Стиль для значений полей  -->
        <Style x:Key="FieldValueStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Шапка  -->
        <Border
            Grid.Row="0"
            Padding="10"
            Background="#FF0078D7"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Кнопка назад  -->
                <Button
                    Grid.Column="0"
                    Width="80"
                    Height="30"
                    Background="White"
                    Command="{Binding BackCommand}"
                    Content="← Назад"
                    Cursor="Hand"
                    FontWeight="Bold"
                    Foreground="#FF0078D7" />

                <!--  Заголовок  -->
                <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Детали улики" />
            </Grid>
        </Border>

        <!--  Основной контент  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="0,15,0,0"
            VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Левая колонка - информация об улике  -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <!--  Код улики  -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource FieldLabelStyle}"
                            Text="Код улики:" />

                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource FieldValueStyle}"
                            Text="{Binding Code}" />
                    </Grid>

                    <!--  Название улики  -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource FieldLabelStyle}"
                            Text="Название:" />

                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource FieldValueStyle}"
                            Text="{Binding Name}" />
                    </Grid>

                    <!--  Тип улики  -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource FieldLabelStyle}"
                            Text="Тип:" />

                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource FieldValueStyle}"
                            Text="{Binding Type}" />
                    </Grid>

                    <!--  Дата обнаружения  -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource FieldLabelStyle}"
                            Text="Дата обнаружения:" />

                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource FieldValueStyle}"
                            Text="{Binding DiscoveryDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" />
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource FieldLabelStyle}"
                            Text="Добавлена:" />

                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource FieldValueStyle}"
                            Text="{Binding AddedDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" />
                    </Grid>

                    <!--  Параметры  -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Параметры:" />

                        <ItemsControl ItemsSource="{Binding Parameters}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Text="{Binding Key, StringFormat='{}{0}:'}" />

                                        <TextBlock
                                            Grid.Column="1"
                                            FontSize="13"
                                            Text="{Binding Value}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!--  Сообщение если нет параметров  -->
                        <TextBlock
                            FontSize="13"
                            FontStyle="Italic"
                            Foreground="#666666"
                            Text="Параметры не указаны">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Parameters.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <!--  Описание  -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Margin="0,5,0,0"
                            VerticalAlignment="Top"
                            Style="{StaticResource FieldLabelStyle}"
                            Text="Описание:" />

                        <Border
                            Grid.Column="1"
                            Padding="10"
                            Background="#F9F9F9"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            CornerRadius="5">
                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                        </Border>
                    </Grid>
                </StackPanel>

                <!--  Правая колонка - фото  -->
                <Border
                    Grid.Column="1"
                    Width="300"
                    Padding="10"
                    Background="#F9F9F9"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasPhoto}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Фото улики:" />

                        <!--  Область для информации о фото  -->
                        <Border
                            Width="280"
                            Height="280"
                            Padding="10"
                            Background="White"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            CornerRadius="5">

                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,10"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Text="Файл прикреплен:" />

                                <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="#666666"
                                        Text="{Binding PhotoPath}"
                                        TextWrapping="Wrap" />
                                </ScrollViewer>

                                <!--  Кнопка просмотра фото  -->
                                <Button
                                    Width="200"
                                    Height="35"
                                    Margin="0,15,0,0"
                                    Background="#2196F3"
                                    Command="{Binding ViewPhotoCommand}"
                                    Content="Просмотреть фото"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    Foreground="White">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#1976D2" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>