<Window
    x:Class="PoliceDB.WPF.Views.AddEvidenceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Добавление улики"
    Width="1000"
    Height="700"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <!-- УДАЛИТЬ эту строку: <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" /> -->

        <!--  Стиль для текстовых блоков полей  -->
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,10,0" />
        </Style>

        <!--  Стиль для текстовых полей  -->
        <Style x:Key="FieldTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="30" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <!--  Стиль для кнопки плюса  -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Стиль для кнопки удаления параметра  -->
        <Style x:Key="RemoveButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Background" Value="#FF6B6B" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Margin" Value="5,0,0,0" />
            <Setter Property="Content" Value="×" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5252" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Шапка с кнопкой назад  -->
        <Border
            Grid.Row="0"
            Padding="10"
            Background="#FF0078D7"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Кнопка назад  -->
                <Button
                    Grid.Column="0"
                    Width="80"
                    Height="30"
                    Background="White"
                    Command="{Binding CancelCommand}"
                    Content="← Назад"
                    Cursor="Hand"
                    FontWeight="Bold"
                    Foreground="#FF0078D7" />

                <!--  Заголовок  -->
                <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Добавление новой улики" />
            </Grid>
        </Border>

        <!--  Основное содержимое с возможностью прокрутки  -->
        <!--  ЗАМЕНА КОНВЕРТЕРА НА ТРИГГЕР  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="0,15,0,0"
            HorizontalScrollBarVisibility="Disabled">
            <ScrollViewer.Style>
                <Style TargetType="ScrollViewer">
                    <Setter Property="VerticalScrollBarVisibility" Value="Disabled" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsScrollBarVisible}" Value="True">
                            <Setter Property="VerticalScrollBarVisibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ScrollViewer.Style>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Левая колонка - основная форма  -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">

                    <!--  Название улики  -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource FieldLabelStyle}"
                            Text="Название улики:" />

                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource FieldTextBoxStyle}"
                            Text="{Binding EvidenceName, UpdateSourceTrigger=PropertyChanged}" />

                    </Grid>

                    <!--  Тип улики  -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource FieldLabelStyle}"
                            Text="Тип улики:" />

                        <ComboBox
                            Grid.Column="1"
                            Height="30"
                            FontSize="14"
                            ItemsSource="{Binding EvidenceTypes}"
                            SelectedItem="{Binding SelectedEvidenceType}" />
                    </Grid>

                    <!--  Параметры улики (динамические)  -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Параметры улики:" />

                        <!--  Существующие параметры  -->
                        <ItemsControl ItemsSource="{Binding Parameters}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            Style="{StaticResource FieldLabelStyle}"
                                            Text="{Binding Name}" />

                                        <TextBox
                                            Grid.Column="1"
                                            Style="{StaticResource FieldTextBoxStyle}"
                                            Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" />

                                        <Button
                                            Grid.Column="2"
                                            Command="{Binding DataContext.RemoveParameterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource RemoveButtonStyle}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!--  Добавление нового параметра  -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                Style="{StaticResource FieldTextBoxStyle}"
                                Text="{Binding NewParameterName, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBox
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                Style="{StaticResource FieldTextBoxStyle}"
                                Text="{Binding NewParameterValue, UpdateSourceTrigger=PropertyChanged}" />

                            <Button
                                Grid.Column="2"
                                Command="{Binding AddParameterCommand}"
                                Content="+"
                                Style="{StaticResource AddButtonStyle}"
                                ToolTip="Добавить параметр" />
                        </Grid>
                    </StackPanel>

                    <!--  Описание  -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Margin="0,5,0,0"
                            VerticalAlignment="Top"
                            Style="{StaticResource FieldLabelStyle}"
                            Text="Описание:" />

                        <TextBox
                            Grid.Column="1"
                            Height="100"
                            AcceptsReturn="True"
                            FontSize="14"
                            Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>
                </StackPanel>

                <!--  Правая колонка - фото (упрощенный вариант)  -->
                <Border
                    Grid.Column="1"
                    Width="300"
                    Padding="10"
                    Background="#F9F9F9"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="5">

                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Фото улики:" />

                        <!--  Область для информации о файле  -->
                        <Border
                            Width="280"
                            Height="100"
                            Padding="10"
                            Background="White"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            CornerRadius="5">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--  Заголовок  -->
                                <TextBlock
                                    Grid.Row="0"
                                    Margin="0,0,0,5"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Text="Выбранный файл:" />

                                <!--  Имя файла  -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="#666666"
                                        Text="{Binding PhotoPath}"
                                        TextWrapping="Wrap" />
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!--  Кнопка выбора файла  -->
                        <Button
                            Width="200"
                            Height="35"
                            Margin="0,15,0,0"
                            Background="#2196F3"
                            Command="{Binding AddPhotoCommand}"
                            Content="Выбрать файл"
                            Cursor="Hand"
                            FontWeight="Bold"
                            Foreground="White">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#1976D2" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!--  Информация о форматах  -->
                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="10"
                            FontStyle="Italic"
                            Foreground="#666666"
                            Text="Поддерживаемые форматы: JPG, PNG, BMP, GIF, TIFF"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!--  Нижняя панель с кнопкой сохранения  -->
        <Border
            Grid.Row="2"
            Margin="0,15,0,0"
            Padding="10"
            Background="#F5F5F5"
            CornerRadius="5">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Подсказка  -->
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="#666666"
                    Text="* Обязательные поля: Название улики" />

                <!--  Кнопка сохранения  -->
                <Button
                    Grid.Column="1"
                    Width="150"
                    Height="40"
                    Background="#4CAF50"
                    Command="{Binding SaveEvidenceCommand}"
                    Content="Сохранить улику"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#45a049" />
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#CCCCCC" />
                                                <Setter Property="Foreground" Value="#888888" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>