<Window
    x:Class="PoliceDB.WPF.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Главное меню - Полицейская база данных"
    Width="800"
    Height="600"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Заголовок  -->
        <Border
            Grid.Row="0"
            Padding="20"
            Background="#FF0078D7">
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Foreground="White"
                Text="Главное меню" />
        </Border>

        <!--  Содержимое  -->
        <StackPanel
            Grid.Row="1"
            Margin="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,20"
                FontSize="18"
                Text="Добро пожаловать в главное меню!" />
            <Button
                Width="100"
                Height="40"
                Click="LogoutButton_Click"
                Content="Выйти" />
        </StackPanel>
    </Grid>
</Window>